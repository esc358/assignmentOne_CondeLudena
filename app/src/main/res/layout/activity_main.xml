<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#7aa599"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_183dp"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginEnd="@dimen/_170dp"
        android:fontFamily="@font/roboto"
        android:text="@string/movie_finder"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginEnd="@dimen/_30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/errorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/editMovieText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ebe1c6"
            android:fontFamily="@font/roboto"
            android:hint="@string/name_a_movie"
            android:inputType="textMultiLine"
            android:padding="@dimen/_8dp"
            android:scrollHorizontally="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_23sp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:backgroundTint="@color/eab26c"
            android:fontFamily="@font/roboto"
            android:text="@string/search"
            android:textSize="@dimen/_23sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="@dimen/_355dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_181dp"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginEnd="@dimen/_181dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:padding="0dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorText" />

</androidx.constraintlayout.widget.ConstraintLayout>